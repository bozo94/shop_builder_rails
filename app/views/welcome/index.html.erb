<div class="main-container">
    <section class="bg-dark space-lg">
        <img alt="Image" src="/assets/graphic-bg-clouds-2.png" class="bg-image" />
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-12 col-md-6 col-lg-5 section-intro">
                    <h1 class="display-3">Build a stunning website</h1>
                    <span class="lead">
                        A robust suite of styled components, powered by Bootstrap 4. Ready to take your Website or App up a notch?
                    </span>
                </div>
                <!--end of col-->
                <% unless user_signed_in? %>
                    <div class="col-12 col-md-6 col-lg-5">
                        <div class="card">
                            <div class="card-body">
                                <%= form_for(resource, :as => :user,
                                                       :url => registration_path(:user),
                                                       :html => {:id => "sign_up_user"},
                                                       :format => :js, remote: true ) do |f| %>
                                    <div class="registration-success"></div>
                                    <div class="form-group">
                                        <label for="exampleInputUsername">Username</label>
                                        <small id="name_error" class="text-danger "></small>
                                        <%= f.text_field :name, placeholder: "Tell us your name", class: 'form-control form-control-lg', id: "exampleInputUsername", aria: { describedby: "usernameHelp" } %>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail">Email address</label>
                                        <small id="email_error" class="text-danger"></small>
                                        <%= f.email_field :email, placeholder: "Enter email", class: 'form-control form-control-lg', id: "exampleInputEmail", aria: { describedby: "emailHelp" } %>
                                        <small id="emailHelp" class="form-text">We'll never share your email with anyone else.</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword">Password</label>
                                        <small id="password_error" class="ftext-danger "></small>
                                        <%= f.password_field :password, placeholder: "Password", class: 'form-control form-control-lg', id: "exampleInputPassword", aria: { describedby: "emailHelp" } %>
                                    </div>
                                    <div class="mb-3">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" value="agree" name="agree-terms" id="check-agree">
                                            <label class="custom-control-label text-small" for="check-agree">I agree to the <a href="#">Terms &amp; Conditions</a>
                                            </label>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-lg btn-success btn-block">Sign up for Wingman</button>
                                <% end %>
                            </div>
                        </div>
                    </div>
                <% else %>

                    <div class="col-12 col-md-6 col-lg-5">
                        <div class="card">
                            <div class="card-body">
                                <%= link_to "Open your shop", new_shop_path, class: "btn btn-success  btn-lg" %>
                            </div>
                        </div>
                    </div>

                <% end %>
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
